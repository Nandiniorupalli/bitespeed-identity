{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "downlevelIteration": true
  },
  "include": ["src/**/*"]
}
